                                        <div class="form-group form-pertemuan">
                                            <label for="">Kelas: </label>
                                            <select name="kelas" class="form-control input-pertemuan" id="optionkelas"
                                                required>
                                                <option value="">--- Pilih Kelas ---</option>

                                            </select>
                                        </div>
                                        <div class="form-group form-pertemuan">
                                            <label for="">Tanggal dan Waktu Pertemuan: </label>
                                            <input type="text" class="form-control input-pertemuan" id="datepicker"
                                                name="tanggal_pertemuan" required>
                                        </div>
                                    </div>

                                    <div class="col-sm">
                                        <div class="form-group form-pertemuan">
                                            <label for="">Mata Pelajaran: </label>
                                            <select name="mapel" class="form-control input-pertemuan" id="optionmapel"
                                                required>
                                                <option value="">--- Pilih Mata Pelajaran ---</option>

                                            </select>
                                        </div>
                                    </div>
                                </div>

