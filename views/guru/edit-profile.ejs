    <link rel="stylesheet" href="../../assets/css/style.css">
    <link rel="stylesheet" href="../../assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="../../assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="../../assets/css/aos.css">
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/"><img src="../../assets/img/logo.png" class="logo-navbar" alt=""></a>
            <div class=" navbar-collapse " id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="/guru/jadwal" class="nav-link mt-2">
                            Kembali Ke Jadwal
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <img src="../assets/img/user.jpg" class="rounded-circle" width="40" alt="">
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="judul">
            <h3 class="mt-5" data-aos="fade-up" data-aos-duration="900">Nama Siswa - Edit Profile</h3>
        </div>
        <div class="mt-3 d-flex">
            <img src="../../assets/img/user.jpg" class="rounded-circle" width="100" alt="" data-aos="zoom-in"
                data-aos-duration="900">
            <div class="upd-b" data-aos="fade-up" data-aos-duration="1000">
                <label for="picture_profile">
                    <div class="btn btn-upd mt-1">Upload New Picture</div>
                    <input type="file" class="picture-profile" id="picture_profile">
                </label>

            </div>
        </div>

        <div class="mt-5">
            <div class="">
                <div class="card" data-aos="fade-up" data-aos-duration="1100">
                    <div class="card-header bg-white">
                        <span class="ml-3">Data Diri</span>
                    </div>
                    <div class="card-body">
                        <form action="">
                            <div class="row">
                                <div class="col-sm">
                                    <div class="form-group form-edit">
                                        <label for="" class="ml-3">Nama :</label>
                                        <input type="text" disabled class="form-control input-edit ml-3">
                                    </div>
                                    <div class="form-group form-edit">
                                        <label for="" class="ml-3">Password Dulu :</label>
                                        <input type="password" class="form-control input-edit ml-3">
                                    </div>
                                    <div class="form-group form-edit">
                                        <label for="" class="ml-3">Password Baru :</label>
                                        <input type="password" class="form-control input-edit ml-3">
                                    </div>
                                    <div class="form-group form-edit mb-0">
                                        <label for="" class="ml-3">Ketik Ulang Password :</label>
                                        <input type="password" class="form-control input-edit ml-3">
                                    </div>
                                    <div class="form-group form-edit">
                                        <label for="" class="ml-3 mt-1"><span style="color: #f84a4a;">*</span>Password
                                            Harus Sesuai</label>
                                    </div>
                                </div>
                                <div class="col-sm">
                                    <div class="form-group form-edit">
                                        <label for="" class="ml-5">Kelas :</label>
                                        <br>
                                        <div id="kelas_profile">

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="text-right my-3" data-aos="fade-up" data-aos-duration="900" data-aos-offset="0">
                    <a href="#" class="lupa">Lupa Password ?</a>
                </div>
                <div class="mb-5" data-aos="fade-up" data-aos-duration="1100" data-aos-offset="0">
                    <button class="btn btn-save px-5">Save Profil</button>
                </div>
            </div>
        </div>
    </div>

    <input type="hidden" id="ids" value="<%= ids %>">


    <script src="../../assets/js/jquery-3.6.0.min.js"></script>
    <script src="../../assets/js/bootstrap.min.js"></script>
    <script src="../../assets/js/scripts.js"></script>
    <script src="../../assets/js/guruscript.js"></script>
</body>

</html>